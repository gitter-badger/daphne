#!/usr/bin/env ruby

require "rubygems"
require "treetop"

if ARGV.size < 1
  puts "Error: Please specify a source file\n\n"
  puts "Usage:\ndaph source.daph [--debug / --ruby]"
  exit
end

load_path = ""

if ARGV.join(" ") =~ /\-I\s*(\S+)/
  $: << File.expand_path($1)
  load_path = $1 + "/"
end

# ruby 1.8 is default
ruby_implementation = "ruby"
